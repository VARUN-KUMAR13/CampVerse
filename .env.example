# CampVerse Environment Configuration

# Environment (development, staging, production)
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WS_URL=ws://localhost:5000

# Firebase Configuration (Required for production)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
VITE_FEATURE_REAL_TIME=true
VITE_FEATURE_AI_CHATBOT=true
VITE_FEATURE_FILE_UPLOAD=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_ERROR_REPORTING=false
VITE_FEATURE_OFFLINE=false

# Limits and Constraints
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_FILES_PER_UPLOAD=5
VITE_SESSION_TIMEOUT=86400000
VITE_REQUEST_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3

# UI Configuration
VITE_DEFAULT_THEME=system
VITE_ENABLE_ANIMATIONS=true
VITE_AUTO_SAVE_INTERVAL=30000
VITE_TOAST_DURATION=5000

# Security Configuration
VITE_ENABLE_CSP=false
VITE_SECURE_COOKIES=false
VITE_HSTS_MAX_AGE=31536000

# Monitoring (Optional)
VITE_SENTRY_DSN=
VITE_LOG_LEVEL=info
VITE_PERFORMANCE_MONITORING=false
